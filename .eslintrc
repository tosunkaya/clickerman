{
	"root": true,
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		// We don't use prettier
		//	https://github.com/prettier/prettier/issues/840
		"eslint:recommended",
	],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"prefer-arrow-callback": "warn",
		"prefer-const": "warn",
		"indent": ["error", "tab"]
	}
}
